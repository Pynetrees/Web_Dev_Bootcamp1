<% include ./partials/header %> 

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="field">
        <title>Title</title>
        <input type="text" name="blog[title]" value="<%= blog.title %>" />
      </div>
      <div class="field">
        <title>Image</title>
        <input type="text" name="blog[image]" value="<%= blog.image %>" />
      </div>
      <div class="field">
        <title>Blog Post</title>
        <textarea name="blog[body]" id="" cols="30" rows="10" required><%= blog.body %></textarea>
      </div>
      <div class="field"></div>
      <input type="submit" class="ui violet basic button" />
    </form>
  </div>

<% include ./partials/footer %>